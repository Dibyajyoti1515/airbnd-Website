<% layout('layouts/boilerplate') -%>
<body>
    <br><br><br><br>
    <table>
    <div class="row offset-2">
        <div class="col-6 offset-2">
            <h1><%= listing.title%></h1>
        </div>
            <div class="col-5 offset-1">
                <div class="card offset-2 col-6" style="width: 30vh;">
                    <img class="card-img-top" style="width: 30rem; height:15rem;" src="<%= listing.image.url%>" alt="Card image cap">
            </div>
        </div>    
        <div >
            <h6 class="text-secondary offset-2" style="width: 30rem;"><b class="text-dark">Description: </b> <%= listing.description%></h6>
        </div>
        <div class="text-dark offset-2">
             <b class="text-secondary-emphasis">Price: </b> 
             &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </div>
        <div >
            <h6 class="text-secondary offset-2">
                <b class="text-dark">Country: </b>
                <%= listing.country%></h6>
        </div>

    <div class="row mb-3">

        <div class="col-4 offset-2">
            <form action="/airbnb/show/<%= listing._id%>/edit" method="get" >
                <button class="btn btn-outline-info">Edit</button>
            </form>
        </div>

        <div class="col-4 offset-1">
        <form action="/airbnb/show/<%= listing._id%>?_method=DELETE" method="post">
            <button class="btn btn-outline-danger ">Delete</button>
        </form>
        </div>

    </div>
    </div>
    </table>
</body>